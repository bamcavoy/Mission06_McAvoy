@{
}

@model List<Movie>

<table class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Category</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent to</th>
            <th>Copied to Plex</th>
            <th>Notes</th>
        </tr>
    </thead>

    @foreach (var m in Model)
    {
        <tbody>
            <tr>
                <td>@m.Title</td>
                <td>@m.Year</td>
                <td>@m.Director</td>

                <td>
                    @{
                        // Find the corresponding category name for the CategoryId
                        var categoryName = ((List<Category>)ViewBag.categories)
                        .Where(c => c.CategoryId == m.CategoryId)
                        .Select(c => c.CategoryName)
                        .FirstOrDefault();
                    }

                    @categoryName
                </td>


                <td>@m.Rating</td>
                <td>@m.Edited</td>
                <td>@m.LentTo</td>
                <td>@m.CopiedToPlex</td>
                <td>@m.Notes</td>

                <td><a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@m.MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@m.MovieId">Delete</a></td>
            </tr>
        </tbody>
    }


</table>