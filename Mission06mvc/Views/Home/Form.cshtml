@{
    ViewData["Title"] = "Add a movie";
}
@model Movie

<h1>Add a movie to the collection</h1>


@* movie form *@
<form method="post">
    <label asp-for="MovieTitle">Title:</label>
    <input asp-for="MovieTitle" required/>
    <br />
    <label asp-for="MovieYear">Year:</label>
    <input asp-for="MovieYear" required min="1900" max="2030" />
    <br />
    <label asp-for="MovieDirector">Director:</label>
    <input asp-for="MovieDirector" required/>
    <br />
    <label asp-for="MovieCategory">Category:</label>
    <input asp-for="MovieCategory" required/>
    <br />
    <label asp-for="MovieRating">Rating:</label>
    <select asp-for="MovieRating" required>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-G">TV-G</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-MA">TV-MA</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="UR">UR</option>
        <option value="NR">NR</option>
    </select>
    <br />
    <label asp-for="MovieEdited">Edited? <div style="color: grey;">(optional)</div></label>
    <select asp-for="MovieEdited">
        <option value="false"></option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="MovieLentTo">Lent to: <div style="color: grey;">(optional)</div></label>
    <input asp-for="MovieLentTo" />
    <br />
    <label asp-for="MovieNotes">Notes: <div style="color: grey;">(optional)</div></label>
    <input asp-for="MovieNotes" maxlength="25"/>
    <br />


    <button type="submit">Add to Collection</button>

</form>
