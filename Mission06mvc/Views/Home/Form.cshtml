@{
    ViewData["Title"] = "Add a movie";
}
@model Movie 
@* Category *@

<h1>Add a movie to the collection</h1>


@* movie form *@
<form method="post">
    <input type="hidden" asp-for="MovieId" />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required/>
    <br /> <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" required min="1900" max="2030" />
    <br /> <br />
    <label asp-for="Director">Director: <div style="color: grey;">(optional)</div></label>
    <input asp-for="Director"/>
    <br /> <br />
    <label asp-for="CategoryId">Category: <div style="color: grey;">(optional)</div></label>
    <select asp-for"CategoryId">
        <option value=""></option>
        @foreach(Category c in ViewBag.categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br /> <br />
    <label asp-for="Rating">Rating:  <div style="color: grey;">(optional)</div></label>
    <select asp-for="Rating">
        <option value=""></option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-G">TV-G</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-MA">TV-MA</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="UR">UR</option>
        <option value="NR">NR</option>
    </select>
    <br /><br />
    <label asp-for="Edited">Edited?</label>
    <select asp-for="Edited" required>
        <option value=0>No</option>
        <option value=1>Yes</option>
    </select>
    <br /> <br />
    <label asp-for="LentTo">Lent to: <div style="color: grey;">(optional)</div></label>
    <input asp-for="LentTo" />
    <br /><br />
    <label asp-for="CopiedToPlex">Copied to Plex?</label>
    <select asp-for="CopiedToPlex" required>
        <option value=0>No</option>
        <option value=1>Yes</option>
    </select>
    <br /> <br />
    <label asp-for="Notes">Notes: <div style="color: grey;">(optional)</div></label>
    <input asp-for="Notes" maxlength="25"/>
    <br /> <br />


    <button type="submit">Add to Collection</button>
    <br />
    <div asp-validation-summary="All"></div>

</form>
